{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Black Magic Probe",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "targetArchitecture": "arm",
            "logging": {
                "engineLogging": true
            },
            "program": "${workspaceFolder}/build/debug/${workspaceFolderBasename}.elf",
            "miDebuggerPath": "arm-none-eabi-gdb",
            "customLaunchSetupCommands": [
                {
                    "text": "cd ${workspaceFolder}/build"
                },
                {
                    "text": "target extended-remote COM8"
                },
                {
                    "text": "monitor tpwr enable"
                },
                {
                    "text": "monitor swdp_scan"
                },
                {
                    "text": "attach 1"
                },
                {
                    "text": "file ${workspaceFolderBasename}.elf"
                },
                {
                    "text": "load"
                },
                {
                    "text": "cd ${workspaceFolder}"
                },
                {
                    "text": "set mem inaccessible-by-default off"
                },
                {
                    "text": "break main"
                }
            ],
            "serverLaunchTimeout": 10000,
            "windows": {
                "miDebuggerPath": "arm-none-eabi-gdb.exe"
            }
        }
    ]
}